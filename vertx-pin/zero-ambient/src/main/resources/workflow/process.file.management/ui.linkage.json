{
    "ticket": {
        "message": {
            "window": "选择关联工单",
            "add": "添加关联工单",
            "search": "搜索工单："
        },
        "tree": {
            "type": "zero.service.catalog",
            "title": "服务目录",
            "config": {
                "parent": "parentId",
                "title": "name",
                "text": "name",
                "value": "code"
            }
        },
        "initial": {
            "alias": "工单关联记录",
            "type": "TICKET - TICKET",
            "linkType": "BI",
            "name": "`${serial}-${serial}`",
            "region": "process.file.management",
            "sourceType": "w.ticket",
            "targetType": "w.ticket"
        },
        "search": {
            "condition": [
                "serial,c",
                "title,c"
            ],
            "placeholder": "单号/标题"
        },
        "ajax": {
            "uri": "/api/up/flow-ticket",
            "method": "POST"
        },
        "table": {
            "total": {
                "report": "（总共:page页，:total条数据）",
                "selected": "勾选了:count条"
            },
            "columns": [
                {
                    "title": "操作",
                    "dataIndex": "key",
                    "fixed": "left",
                    "width": 80,
                    "$render": "EXECUTOR",
                    "$option": [
                        {
                            "text": "查看",
                            "executor": "fnView"
                        }
                    ]
                },
                "serial,单号",
                {
                    "metadata": "phase,工单状态,RENDERS",
                    "width": 100,
                    "config": {
                        "items": [
                            "INIT,填写申请:edit,16:#3053EB",
                            "DRAFT,草稿:form,16:#EE3B3B",
                            "PENDING,等待处理:undo,16:#EE3B3B",
                            "FINISHED,已完成:check-circle,16:#58c623",
                            "ACCEPTED,已接受:info-circle,16:#58c623",
                            "REJECTED,已拒绝:redo,16:#CD1076",
                            "CANCELED,已撤销:stop,16:#CD1076",
                            "EXPIRED,已超时:clock-circle,16:#CD1076"
                        ]
                    }
                },
                "title,工单标题",
                {
                    "metadata": "openBy,制单人,USER",
                    "$config": {
                        "uri": "/api/user/:key",
                        "field": "realname",
                        "icon": "user,#00BF9F"
                    }
                },
                {
                    "metadata": "openAt,制单时间,DATE",
                    "$format": "YYYY-MM-DD HH:mm"
                }
            ]
        }
    }
}